      <div class="row">
        {{#if posts.length}}
          <h3 class="site-text">Blog Posts:</h3>
            {{#each posts as |post|}}
              <div class="row give-me-space">
                <div class="card no-pad">
                  <div class="card-header">
                    <div class="row col-8 col-sm-6">
                      <h5 class="post-title">{{post.title}}</h5>
                    </div>
                    <div class="col-4 col-sm-6">
                      Posted by: {{user.username}} on {{post.date_created}}
                    </div>
                  </div>
                  <div class="card-body">
                    <p class="card-text">{{post.content}}</p>
                  </div>
                </div>
              </div>
            {{/each}}
        {{/if}}
      </div>