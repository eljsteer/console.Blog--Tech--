        <input type="password" class="form-control" id="password-login" placeholder="Password">
      </div>
      <br>
      <button type="submit" class="btn btn-outline-dark" id="login-btn">Login</button>
    </form>
    <br>
    <div>
      <span class="">New to Console.Blog(Tech) </span><a href='/signup' class="signup-link">Sign Up Now</a>
