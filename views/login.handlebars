  <div class="col-md-6" id="login-container">

    <h2 class="login-headers">Login</h2>

    <form class="form login-form">
      <div class="form-group" id="login-email">
        <label for="email-login">Email address:</label>
        <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp" placeholder="Enter email">
      </div>
      <div class="form-group" id="login-password">
